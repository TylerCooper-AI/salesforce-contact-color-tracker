<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <description>Simple flow that creates personalized greetings based on contact's favorite color</description>
    <label>Color Greeting Flow Simple</label>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Decision_Color_Check</targetReference>
        </connector>
    </start>
    <decisions>
        <name>Decision_Color_Check</name>
        <label>Decision: Color Check</label>
        <locationX>50</locationX>
        <locationY>100</locationY>
        <defaultConnector>
            <targetReference>Assignment_Default_Greeting</targetReference>
        </defaultConnector>
        <rules>
            <name>Red_Color</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Favorite_Color__c</leftValueReference>
                <operator>Equals</operator>
                <rightValue>
                    <stringValue>Red</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assignment_Red_Greeting</targetReference>
            </connector>
        </rules>
        <rules>
            <name>Blue_Color</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Favorite_Color__c</leftValueReference>
                <operator>Equals</operator>
                <rightValue>
                    <stringValue>Blue</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assignment_Blue_Greeting</targetReference>
            </connector>
        </rules>
    </decisions>
    <assignments>
        <name>Assignment_Red_Greeting</name>
        <label>Assignment: Red Greeting</label>
        <locationX>50</locationX>
        <locationY>200</locationY>
        <assignmentItems>
            <assignToReference>$Record.Description</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Hello! I see your favorite color is Red - that's a bold and energetic choice! ðŸ”´</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <assignments>
        <name>Assignment_Blue_Greeting</name>
        <label>Assignment: Blue Greeting</label>
        <locationX>50</locationX>
        <locationY>300</locationY>
        <assignmentItems>
            <assignToReference>$Record.Description</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Hello! I see your favorite color is Blue - that's a calm and trustworthy choice! ðŸ”µ</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <assignments>
        <name>Assignment_Default_Greeting</name>
        <label>Assignment: Default Greeting</label>
        <locationX>50</locationX>
        <locationY>400</locationY>
        <assignmentItems>
            <assignToReference>$Record.Description</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Hello! Thanks for sharing your favorite color with us! ðŸŽ¨</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <variables>
        <name>Record</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
        <object>Contact</object>
    </variables>
</Flow>
